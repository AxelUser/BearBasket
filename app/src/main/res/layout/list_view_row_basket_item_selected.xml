<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/listViewRowEditBase"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Наименование"
        android:id="@+id/listViewRowEditBasketItemName"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorTextDef"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:layout_toStartOf="@+id/listViewRowEditBasketItemDeleteButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewRowEditBasketItemDeleteButton"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_delete"
        android:tintMode="multiply"
        android:tint="#ff1744" />

</RelativeLayout>