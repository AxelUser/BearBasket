<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/listViewRowBase"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Наименование"
        android:id="@+id/listViewRoBasketItemName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/listViewRoBasketItemCount"
        android:textColor="@color/colorTextDef" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Мера"
        android:id="@+id/listViewRoBasketItemCount"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:textColor="@color/colorTextDef"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewRoBasketItemImageButtonSell"
        android:src="@drawable/ic_sell"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>